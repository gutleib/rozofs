#!/usr/bin/make -f

## Hardening Options
DPKG_EXPORT_BUILDFLAGS = 1
-include /usr/share/dpkg/buildflags.mk
CFLAGS   += $(CPPFLAGS) -D_GNU_SOURCE
CXXFLAGS += $(CPPFLAGS) -D_GNU_SOURCE

CMAKE_EXTRA_FLAGS += -DCMAKE_SKIP_RPATH=ON \
                     -DCMAKE_BUILD_TYPE:STRING=Release \
                     -DCMAKE_INSTALL_PREFIX:STRING=/usr \
                     -DSYSCONFDIR:STRING=/etc \
                     -DDEBIAN_LAYOUT=ON \
                     -DNO_RDMA=$(NO_RDMA)

%:
	dh $@ --buildsystem=cmake --with python2 --with systemd

override_dh_python2:
	dh_python2 --no-guessing-versions

override_dh_systemd_enable:
	dh_systemd_enable --no-enable rozofs-metadata-backup.service

override_dh_installinit:
	dh_installinit -prozofs-rozofsmount --no-start

override_dh_systemd_start:
	dh_systemd_start --no-start rozofs-metadata-backup.service

override_dh_auto_configure:
	dh_auto_configure -- $(CMAKE_EXTRA_FLAGS)

override_dh_strip:
	dh_strip --dbg-package=rozofs-dbg

override_dh_builddeb:
		# keep tar.gz for aptly
       dh_builddeb -- -Zgzip
